---
import { ViewTransitions } from "astro:transitions";
import SocialLinks from "../components/social-links.tsx";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body class="bg-base-300 p-2 h-screen max-h-screen min-h-screen overflow-hidden">
    <main class="bg-base-100 flex flex-col min-h-full p-4">
      <slot />
      <footer class="flex flex-col flex-1 justify-end text-lg items-center">
        <SocialLinks />
      </footer>
    </main>
  </body>
</html>
